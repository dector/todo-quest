{
  "openapi": "3.0.0",
  "info": {
    "title": "ToDo Server API",
    "description": "Simple ToDo service API for `Kotlin ToDo-Quest`",
    "version": "0.2.0"
  },
  "servers": [
    {
      "url": "http://localhost:3030/api",
      "description": "Local server"
    }
  ],
  "paths": {
    "/tasks": {
      "parameters": [],
      "get": {
        "summary": "Fetch all stored tasks",
        "tags": [
          "tasks"
        ],
        "parameters": [
          {
            "name": "filter",
            "in": "query",
            "schema": {
              "enum": [
                "all",
                "done",
                "undone"
              ],
              "type": "string",
              "default": "all"
            },
            "description": "Filter by task status"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "headers": {},
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Task"
                  }
                },
                "examples": {
                  "All tasks": {
                    "value": [
                      {
                        "id": "497f6eca-6276-4993-bfeb-53cbbbba6f08",
                        "title": "Read about Kotlin",
                        "isDone": true,
                        "createdAt": "2020-11-10T12:00:00Z"
                      },
                      {
                        "id": "e57c98ef-0216-44cd-b987-29605699e024",
                        "title": "Create API server",
                        "isDone": false,
                        "createdAt": "2020-11-10T14:18:00Z"
                      },
                      {
                        "id": "1582a42f-d9a4-4547-ad34-72e8b08bfa82",
                        "title": "Create UI client",
                        "isDone": false,
                        "createdAt": "2020-11-10T14:20:00Z"
                      }
                    ]
                  },
                  "No tasks": {
                    "value": []
                  }
                }
              }
            }
          },
          "400": {
            "description": "Request parameter `filter` is not correct",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "examples": {
                  "Incorrect filter": {
                    "value": {
                      "errors": "'filter' was 'everything' but only one of ['all', 'done', 'undone'] are allowed"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server internal error"
          }
        },
        "description": "Retrieve all tasks stored on server",
        "operationId": "fetch-tasks"
      },
      "post": {
        "summary": "Create new task",
        "tags": [
          "tasks"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Task"
                },
                "examples": {
                  "Task created": {
                    "value": {
                      "id": "8e5f48a0-e7de-4a0e-a787-304f11696c84",
                      "title": "Read about Ktor",
                      "isDone": false,
                      "createdAt": "2020-11-10T12:00:00Z"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Request body is not JSON or `title` is missing",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "examples": {
                  "Not a JSON": {
                    "value": {
                      "errors": [
                        "request is not a JSON object"
                      ]
                    }
                  },
                  "No title": {
                    "value": {
                      "errors": [
                        "'title' is missing in request"
                      ]
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server internal error"
          }
        },
        "description": "Create new task with specified title",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  }
                },
                "required": [
                  "title"
                ]
              },
              "examples": {
                "Create new task": {
                  "value": {
                    "title": "Read about Ktor"
                  }
                }
              }
            }
          },
          "description": "New task description"
        }
      }
    },
    "/task/{uuid}": {
      "parameters": [
        {
          "schema": {
            "type": "string",
            "format": "uuid"
          },
          "name": "uuid",
          "in": "path",
          "required": true,
          "description": "Task UUID"
        }
      ],
      "patch": {
        "summary": "Change task status",
        "tags": [
          "task"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Task"
                },
                "examples": {
                  "Task status changed": {
                    "value": {
                      "id": "4713e273-6fac-4ecc-b0c5-52230d866764",
                      "title": "Read about Ktor",
                      "isDone": true,
                      "createdAt": "2019-08-24T14:15:22Z"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Task with current uuid doesn't exist, request body is not JSON or `isDone` is not provided / not a boolean",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "examples": {
                  "Task does not exists": {
                    "value": {
                      "errors": [
                        "task with uuid '7352a88d-cf84-4173-8294-f2f1d838bf37' does not exist"
                      ]
                    }
                  },
                  "Not a JSON": {
                    "value": {
                      "errors": [
                        "request is not a JSON object"
                      ]
                    }
                  },
                  "Missing `isDone`": {
                    "value": {
                      "errors": [
                        "'isDone' is missing in request"
                      ]
                    }
                  },
                  "Incorrect `isDone`": {
                    "value": {
                      "errors": [
                        "'isDone' is not a boolean value: 'maybe'"
                      ]
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "description": "Mark task as `done`/`undone`",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "isDone": {
                    "type": "boolean"
                  }
                },
                "required": [
                  "isDone"
                ]
              }
            }
          },
          "description": "Set task status"
        }
      }
    }
  },
  "tags": [
    {
      "name": "tasks",
      "description": "All tasks"
    },
    {
      "name": "task",
      "description": "Single task"
    }
  ],
  "components": {
    "schemas": {
      "Task": {
        "title": "Task",
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "title": {
            "type": "string"
          },
          "isDone": {
            "type": "boolean"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "id",
          "title",
          "isDone",
          "createdAt"
        ]
      },
      "Error": {
        "type": "object",
        "properties": {
          "errors": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "errors"
        ]
      }
    }
  }
}
